@inherits LayoutComponentBase
@inject UserService UserService

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h5" Class="ml-3">Circuit Adventures</MudText>
        <MudSpacer />

        @if (UserService.CurrentUser != null)
        {
            <MudText Typo="Typo.body1" Class="mr-4">
                Welcome, @UserService.CurrentUser.Name!
            </MudText>
            <MudText Typo="Typo.body2" Class="mr-3">
                Level @UserService.CurrentUser.CurrentLevel / 100
            </MudText>
        }
    </MudAppBar>

    <MudDrawer @bind-Open="@_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Menu</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="my-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }

    protected override async Task OnInitializedAsync()
    {
        await UserService.InitializeAsync();
    }
}
